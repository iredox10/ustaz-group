<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <title>view delete edit article</title>

</head>
<body>
    <%- include('./partial/header.ejs') %> 
    <% articles.forEach(article=> { %>
        <div class="container">
        <div class="card my-3">
            <div class="card-header">
                <h1>
                    <%= article.title %>
                </h1>
            </div>
            <div class="card-body">
                <p>
                    <%= article.articleBody.slice(0,200) %> ...
                </p>
                <div class="btn d-flex gap-1">
                <a href="/article-detail/<%= article.id %> " class="btn btn-outline-secondary text-capitalize">read more</a>

                <a href="/article/edit/<%= article.id %> " class="btn btn-outline-success text-capitalize">edit</a>

                <form action="/article-detail/<%= article.id %>?_method=DELETE" method="POST">
                <button class="btn btn-outline-danger text-capitalize"  type="submit">delete</button>
                </form>
                </div>
            </div>
        </div>
        </div>
        <% }) %>
</body>
</html>